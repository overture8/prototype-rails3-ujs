<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<h3>Comments</h3>
<hr />

<div id="comments">
  <%= render @post.comments %>
</div>

<% form_for [@post, Comment.new], :remote => true do |f| %>
  <%= f.label :body %><br />
  <%= f.text_area :body, :rows => 5 %><br />
  <%= f.submit %>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


